<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="300" prefWidth="500" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fucarrentingsystem.ui.controller.LoginController">

    <top>
        <StackPane prefHeight="80.0" style="-fx-background-color: #2E7D32;">
            <Label text="FU Car Renting System" textFill="WHITE">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>
        </StackPane>
    </top>
   <center>
        <GridPane hgap="10" prefHeight="176.0" prefWidth="500.0" vgap="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="40" right="40" top="30" />
            </padding>

            <Label text="Username / Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Button maxWidth="Infinity" onAction="#handleLogin" style="-fx-background-color: #2E7D32; -fx-text-fill: white;" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <GridPane.margin>
                    <Insets top="10" />
                </GridPane.margin>
            </Button>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
   </center>
</BorderPane>
