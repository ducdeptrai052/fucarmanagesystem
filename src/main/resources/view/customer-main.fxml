<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fucarrentingsystem.ui.controller.CustomerMainController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #F5F5F5;">

    <top>
        <VBox>
            <StackPane prefHeight="80.0" style="-fx-background-color: #2E7D32;">
                <Label fx:id="lblWelcome" textFill="WHITE">
                    <font>
                        <Font size="26.0"/>
                    </font>
                </Label>
            </StackPane>
        </VBox>
    </top>

    <center>
        <SplitPane orientation="VERTICAL">
            <items>
                <!-- Profile -->
                <AnchorPane>
                    <children>
                        <GridPane hgap="10" vgap="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Mobile:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtMobile" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Birthday:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="dpBirthday" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <PasswordField fx:id="txtPassword" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                            <Button text="Save Profile" GridPane.rowIndex="5" GridPane.columnIndex="1"
                                    onAction="#handleSaveProfile"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white;">
                                <GridPane.margin>
                                    <Insets top="10"/>
                                </GridPane.margin>
                            </Button>
                        </GridPane>
                    </children>
                </AnchorPane>

                <!-- History -->
                <AnchorPane>
                    <children>
                        <VBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
                            <Label text="Rental History" style="-fx-font-size: 16; -fx-font-weight: bold;">
                                <padding>
                                    <Insets top="10" left="10" bottom="5" right="10"/>
                                </padding>
                            </Label>
                            <TableView fx:id="tblHistory">
                                <columns>
                                    <TableColumn fx:id="colHistId" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="colHistCar" text="Car" prefWidth="150"/>
                                    <TableColumn fx:id="colHistPickup" text="Pickup" prefWidth="100"/>
                                    <TableColumn fx:id="colHistReturn" text="Return" prefWidth="100"/>
                                    <TableColumn fx:id="colHistPrice" text="Price" prefWidth="100"/>
                                    <TableColumn fx:id="colHistStatus" text="Status" prefWidth="100"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #E53935; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
